<Window x:Class="TvFileBot.ShowDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TvFileBot"
        mc:Ignorable="d"
        Title="ShowDetails" Height="300" Width="300">
   <local:ReflectionControl>
    <Grid x:Name="EndedStatus">
        <Ellipse Width="40" Height="30" Stroke="DarkRed" StrokeThickness="2">
            <Ellipse.Fill>
                <RadialGradientBrush GradientOrigin="0.3,0.3">
                    <RadialGradientBrush.GradientStops>
                        <GradientStop Color="Red" Offset="0"/>
                        <GradientStop Color="Red" Offset="0.5"/>
                        <GradientStop Color="DarkRed" Offset="1"/>
                    </RadialGradientBrush.GradientStops>
                </RadialGradientBrush>
            </Ellipse.Fill>
        </Ellipse>
        <TextBlock Text="Ended" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="9" FontWeight="Black" FontFamily="pack://application:,,,/Fonts/#Roboto">
            <TextBlock.Effect><DropShadowEffect/></TextBlock.Effect>
        </TextBlock>
    </Grid>
    </local:ReflectionControl>
</Window>
